<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="textColorPrimary">@color/primary_text_default_material_light</item>
        <item name="textColorSecondary">@color/secondary_text_default_material_light</item>
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="divider_color">@color/divider</item>
        <item name="toolBar_shadow">@drawable/toolbar_shadow</item>
    </style>

    <style name="MyMangaTheme" parent="AppTheme">
        <item name="android:listViewStyle">@style/listStyle</item>
        <item name="list_selector">@drawable/list_item_state</item>
    </style>

    <style name="DetailActivityTheme" parent="AppTheme" />

    <style name="MangaViewerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="listStyle" parent="Widget.AppCompat.ListView">
        <item name="android:divider">@drawable/divider</item>
        <item name="divider">@drawable/divider</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="MediumTextAppearance">
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
    </style>

    <style name="MediumTextAppearance.Condensed">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="SmallTextAppearance" parent="MediumTextAppearance">
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
    </style>

    <style name="LargeTextAppearance" parent="MediumTextAppearance">
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="toolbar_SubTitle">
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:textColor">#8cffffff</item>
    </style>


</resources>
