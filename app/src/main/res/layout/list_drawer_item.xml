<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="?android:listPreferredItemHeight"
    android:paddingLeft="16dp"
    android:paddingStart="16dp"
    android:paddingRight="16dp"
    android:paddingEnd="16dp"
    android:background="@drawable/drawer_item_list_state"
    android:id="@+id/drawer_item">

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="?divider_color"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>

    <ImageView
        android:id="@+id/drawer_list_item_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/drawer_list_item_text"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="32dp"
        android:paddingRight="16dp"
        style="@style/SmallTextAppearance"
        android:fontFamily="sans-serif-medium"
        />

</LinearLayout>